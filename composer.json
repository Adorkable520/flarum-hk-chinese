{
    "name": "Adorkable520/flarum-hk-chinese",
    "type": "flarum-extension",
    "description": "Simplified Chinese language pack for Flarum",
    "keywords": ["locale"],
    "license": "MIT",
    "authors": [
        {
            "name": "Monster",
            "email": "noreply@ss-bc.cn",
            "homepage": "https://www.ss-bc.cn"
        }
    ],
    "support": {
        "source": "https://github.com/Adorkable520/flarum-hk-chinese.git",
		"issues": "https://www.ss-bc.cn"
    },
    "require": {
		"flarum/core": "^0.1.0-beta.7"
    },
    "extra": {
		"branch-alias": {
			"dev-master": "0.1.x-dev"
		},
        "flarum-extension": {
            "title": "Chinese (zh_HK)",
            "icon": {
                "image": "icon.svg",
                "backgroundColor": "#fff",
                "backgroundSize": "cover",
                "backgroundPosition": "center"
            }
        },
        "flarum-locale": {
            "code": "zh-hk",
            "title": "简体中文"
        }
    }
}
